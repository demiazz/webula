<article class="content-menu">
  <ul>
    <% if @personal %>
      <% if action_name == "index" %>
        <li><%= link_to "All questions", questions__index_path, :class => "selected" %></li>
      <% else %>
        <li><%= link_to "All questions", questions__index_path %></li>
      <% end %>
      <% if action_name == "personal_questions" %>
        <li><%= link_to "Personal questions", questions__personal_questions_path(:username => nil), :class => "selected" %></li>
      <% else %>
        <li><%= link_to "Personal questions", questions__personal_questions_path(:username => nil) %></li>
      <% end %>
      <% if action_name == "friends_questions" %>
        <li><%= link_to "Questions by friends", questions__friends_questions_path(:username => nil), :class => "selected" %></li>
      <% else %>
        <li><%= link_to "Questions by friends", questions__friends_questions_path(:username => nil) %></li>
      <% end %>
    <% else %>
      <% if action_name == "personal_questions" %>
        <li><%= link_to "Personal questions", questions__personal_questions_path(:username => @user.username), :class => "selected" %></li>
      <% else %>
        <li><%= link_to "Personal questions", questions__personal_questions_path(:username => @user.username) %></li>
      <% end %>
      <% if action_name == "friends_questions" %>
        <li><%= link_to "Questions by friends", questions__friends_questions_path(:username => @user.username), :class => "selected" %></li>
      <% else %>
        <li><%= link_to "Questions by friends", questions__friends_questions_path(:username => @user.username) %></li>
      <% end %>
    <% end %>
  </ul>
</article>