<% content_for :title do %>
  Friends
<% end %>

<%= render "current_links" %>

<% if @friends.count > 0 %>
  <article class="friends">
    <% @friends.each do |friend| %>
      <table>
        <tr>
          <td class="avatar"><%= image_tag friend.user_profile.avatar %></td>
          <td class="user-info">
            <h1><%= link_to "#{friend.user_profile.first_name} #{friend.user_profile.last_name}", profiles__show_path(:username => friend.username) %></h1>
            <p><%= friend.user_profile.org_name %></p>
            <p><%= friend.user_profile.org_unit %></p>
            <p><%= friend.user_profile.org_position %></p>
          </td>
          <td class="menu">
            <p><%= link_to "View profile", profiles__show_path(:username => friend.username) %></p>
            <p><%= link_to "Remove from friends", friendship__remove_friend_path(:username => friend.username), :method => :put %></p>
          </td>
        </tr>
      </table>
    <% end %>
  </article>
<% else %>
  <article class="friends-empty">
    <p>You have not friends.</p>
  </article>
<% end %>