<article class="content-menu">
  <ul>
    <% if controller_name == "friendship" and action_name == "show" %>
      <li><%= link_to "Friends (#{@user.friendship_stat.friends_count})", friendship__show_path(:username => @user.username), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Friends (#{@user.friendship_stat.friends_count})", friendship__show_path(:username => @user.username) %></li>
    <% end %>

    <% if controller_name == "friendship" and action_name == "mutual_friends" %>
      <li><%= link_to "Mutual friends (#{@mutual_friends_count})", friendship__mutual_friends_path, :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Mutual friends (#{@mutual_friends_count})", friendship__mutual_friends_path %></li>
    <% end %>

    <% if controller_name == "friendship" and action_name == "not_mutual_friends" %>
      <li><%= link_to "Not mutual friends (#{@not_mutual_friends_count})", friendship__not_mutual_friends_path, :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Not mutual friends (#{@not_mutual_friends_count})", friendship__not_mutual_friends_path %></li>
    <% end %>
  </ul>
</article>