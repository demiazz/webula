<%# Title for HTML Head Title %>
<% content_for :title do %>
  Webula | Forgot Your Password?
<% end %>

<%# Slogan for page %>
<% content_for :slogan do %>
  <%# Slogan must be written %>
<% end %>

<%# Title for window %>
<% content_for :window_header do %>
	<h1>Forgot Your Password?</h1>
<% end %>

<%# Body %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username %><br />
  <%= f.text_field :username %></p>

  <p><%= f.submit "Send me reset password instructions" %></p>
<% end %>

<%# Links to other auth functions %>
<% content_for :window_footer do %>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Sign in", new_session_path(resource_name) %> /
  <% end -%>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:username) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
  <% end -%>
<% end %>