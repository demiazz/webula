<article class="content-menu">
  <ul>
    <li>Subscribes:</li>
    <% if action_name == "followings" %>
      <li><%= link_to "Followings (#{@microblog.followings_count})", microblog__followings_path(:username => @user.username), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Followings (#{@microblog.followings_count})", microblog__followings_path(:username => @user.username) %></li>
    <% end %>

    <% if action_name == "followers" %>
      <li><%= link_to "Followers (#{@microblog.followers_count})", microblog__followers_path(:username => @user.username), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Followers (#{@microblog.followers_count})", microblog__followers_path(:username => @user.username) %></li>
    <% end %>

    <li class="separator"></li>

    <li><%= link_to "Feeds", microblog__personal_feed_path(:username => @user.username) %></li>

    <li class="separator"></li>

    <% if @follow_flag %>
      <li><%= link_to "Unfollow", microblog__remove_following_path(:following => @user.username) %></li>
    <% else %>
      <li><%= link_to "Follow", microblog__add_following_path(:following => @user.username) %></li>
    <% end %>
  </ul>
</article>