<% content_for :title do %>
  Followers
<% end %>

<%= content_for :left_aside do %>
  <%= render "left_aside" %>
<% end %>

<%= content_for :right_aside do %>
  <%= render "right_aside" %>
<% end %>

<%= render "microblog/links/subscribes_links" %>

<% if @microblog.followers_count > 0 %>
  <article class="friends">
    <% @followers.each do |follower| %>
      <table>
        <tr>
          <td class="avatar"><%= image_tag follower.user_profile.avatar %></td>
          <td class="user-info">
            <h1><%= to_microblog_user_home follower, follower.full_name %> written:</h1>
            <p><%= follower.user_profile.org_name %></p>
            <p><%= follower.user_profile.org_unit %></p>
            <p><%= follower.user_profile.org_position %></p>
          </td>
          <td class="menu">
            <p><%= to_microblog_user_personal_feed(follower, "View feed") %></p>
            <% if follower.buffer == :follow %>
              <p><%= to_unfollow(follower) %></p>
            <% end %>
            <% if follower.buffer == :unfollow %></p>
              <p><%= to_follow(follower) %></p>
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
    <div class="pagination">
      <div class="entries"><%= page_entries_info @followers %></div>
      <div>
        <% if @personal %>
          <%= will_paginate @followers, :container => false, :inner_window => 1, :params => { :username => nil } %>
        <% else %>
          <%= will_paginate @followers, :container => false, :inner_window => 1 %>
        <% end %>
      </div>
    </div>
  </article>
<% else %>
  <article class="friends-empty">

  </article>
<% end %>