<% content_for :title do %>
  Followings
<% end %>

<%= content_for :left_aside do %>
  <%= render "left_aside" %>
<% end %>

<%= content_for :right_aside do %>
  <%= render "right_aside" %>
<% end %>

<%= render "microblog/links/subscribes_links" %>

<% if @microblog.followings_count > 0 %>
  <article class="friends">
    <% @followings.each do |following| %>
      <table>
        <tr>
          <td class="avatar"><%= image_tag following.user_profile.avatar %></td>
          <td class="user-info">
            <h1><%= to_microblog_user_home following, following.full_name %> written:</h1>
            <p><%= following.user_profile.org_name %></p>
            <p><%= following.user_profile.org_unit %></p>
            <p><%= following.user_profile.org_position %></p>
          </td>
          <td class="menu">
            <p><%= to_microblog_user_personal_feed(following, "View feed") %></p>
            <% if @personal %>
              <p><%= to_unfollow(following) %></p>
            <% else %>
              <% if following.buffer == :follow %>
                <p><%= to_unfollow(following) %></p>
              <% end %>
              <% if following.buffer == :unfollow %></p>
                <p><%= to_follow(following) %></p>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
    <div class="pagination">
      <div class="entries"><%= page_entries_info @followings %></div>
      <div>
        <% if @personal %>
          <%= will_paginate @followings, :container => false, :inner_window => 1, :params => { :username => nil } %>
        <% else %>
          <%= will_paginate @followings, :container => false, :inner_window => 1 %>
        <% end %>
      </div>
    </div>
  </article>
<% else %>
  <article class="friends-empty">

  </article>
<% end %>