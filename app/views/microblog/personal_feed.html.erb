<% content_for :title do %>
  Personal feed
<% end %>

<% if @personal %>
  <%= render "microblog/links/personal_feeds_links" %>
<% else %>
  <%= render "microblog/links/feeds_links" %>
<% end %>

<% if @posts_count > 0 %>
  <article class="microblog">
  <%= render "form" %>
  <% @posts.each do |post| %>
    <table>
      <tr>
        <td rowspan=2 class="avatar"><%= image_tag @user.user_profile.avatar %></td>
        <td class="user-info">
          <h1><%= link_to @user.full_name, microblog__personal_feed_path(:username => nil) %> written:</h1>
          <p class="post-text"><%= post.text %></p>
        </td>
        <td rowspan=2 class="menu">
          <p><%= link_to "Delete post", microblog__delete_post_path(:id => post.id), :method => :put %></p>
        </td>
      </tr>
      <tr>
        <td class="posted-at"><p><%= post.created_at.strftime("Posted at %e %B %Y in %H:%M") %></p></td>
      </tr>
    </table>
  <% end %>
  </article>
<% else %>
  <article class="microblog">
    <article class="microblog-empty">
      <p>Empty</p>
    </article>
  </article>
<% end %>