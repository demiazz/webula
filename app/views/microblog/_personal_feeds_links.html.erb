<article class="content-menu">
  <ul>
    <li>Feeds:</li>
    <% if action_name == "global_feed" %>
      <li><%= link_to "Global", microblog__global_feed_path, :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Global", microblog__global_feed_path %></li>
    <% end %>

    <% if action_name == "local_feed" %>
      <li><%= link_to "Local", microblog__local_feed_path(:username => nil), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Local", microblog__local_feed_path(:username => nil) %></li>
    <% end %>

    <% if action_name == "personal_feed" %>
      <li><%= link_to "Personal", microblog__personal_feed_path(:username => nil), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Personal", microblog__personal_feed_path(:username => nil) %></li>
    <% end %>

    <% if action_name == "followings_feed" %>
      <li><%= link_to "Followings", microblog__followings_feed_path(:username => nil), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Followings", microblog__followings_feed_path(:username => nil) %></li>
    <% end %>

    <% if action_name == "followers_feed" %>
      <li><%= link_to "Followers", microblog__followers_feed_path(:username => nil), :class => "selected" %></li>
    <% else %>
      <li><%= link_to "Followers", microblog__followers_feed_path(:username => nil) %></li>
    <% end %>

    <li class="separator"></li>

    <li><%= link_to "Subscribes", microblog__followings_path(:username => nil) %></li>
  </ul>
</article>