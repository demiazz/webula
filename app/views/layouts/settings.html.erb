<!DOCTYPE html>
<html>
    <head>
        <title>Webula | <%= current_user.user_profile.first_name %> <%= current_user.user_profile.last_name %> | <%= yield :title %></title>
        <%= stylesheet_link_tag "fonts" %>
        <%= stylesheet_link_tag "style" %>
        <%= stylesheet_link_tag "settings" %>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
    </head>
    <body>

    	<!-- Header -->
        <header>
            <section class="content">
            	<!-- Logo -->
                <%= image_tag "logo.png", :class => "logo" %>
                <a href="<%= profiles_index_path %>"><%= image_tag current_user.user_profile.avatar, :class => "avatar" %></a>
                <p class="status">
                	<a href="<%= profiles_index_path %>">
                		<%= current_user.user_profile.first_name %> <%= current_user.user_profile.last_name %>
                	</a>
                	[
                	<a href="<%= settings_account_edit_path %>" class="options">Settings</a>
                     | 
                    <a href="<%= destroy_session_path(:user) %>" class="exit">Exit</a>
                	]
                </p>
            </section>
        </header>

        <!-- Navigation -->
        <nav>
            <ul>
                <%= yield :nav_menu %>
            </ul>
        </nav>

        <!-- Page Content -->
        <section id="page-wrapper">
        	<section id="page">
        	
        		<!-- Left Side Bar -->
            	<aside id="left-aside">
                	<article class="avatar">
                		<%= image_tag current_user.user_profile.avatar, :id => "avatar" %>
                	</article>
                	<%= yield :left_aside %>
            	</aside>

            	<!-- Content -->
            	<section id="content">
            		
            		<!-- Content Header -->
            		<section id="content-header">
            			<h1><%= current_user.user_profile.first_name %> <%= current_user.user_profile.last_name %> : <%= yield :title %></h1>
            		</section>

            		<!-- Content Body -->
                	<section id="content-body">
                    	<%= yield %>
                    </section>
                
                	<!-- Content Footer -->
                	<section id="content-footer">
                    	<p class="links">
                        	<%= yield :footer_links %>
                    	</p>
                    	<p class="copyright">Webula Â© 2011 Alexey "demiazz" Plutalov</p>
                	</section>
            	
            	</section>

            	<!-- Right Side Bar -->
            	<aside id="right-aside">
            		<%= yield :right_aside %>
            	</aside>
        
        	</section>
        </section>
    </body>
</html>